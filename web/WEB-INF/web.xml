<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.edu.controller.user.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/userlogin</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.edu.controller.user.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/userregister</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListServlet</servlet-name>
        <servlet-class>com.edu.controller.card.ListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddServlet</servlet-name>
        <servlet-class>com.edu.controller.card.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddServlet</servlet-name>
        <url-pattern>/addCard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>com.edu.controller.card.UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/updateCard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FindServlet</servlet-name>
        <servlet-class>com.edu.controller.card.FindServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindServlet</servlet-name>
        <url-pattern>/findCard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>com.edu.controller.card.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/deleteCard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RecoverServlet</servlet-name>
        <servlet-class>com.edu.controller.trash.RecoverServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecoverServlet</servlet-name>
        <url-pattern>/recoverCard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListTrashServlet</servlet-name>
        <servlet-class>com.edu.controller.trash.ListTrashServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListTrashServlet</servlet-name>
        <url-pattern>/listTrash</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DelTrashServlet</servlet-name>
        <servlet-class>com.edu.controller.trash.DelTrashServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DelTrashServlet</servlet-name>
        <url-pattern>/deleteTrash</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FrameServlet</servlet-name>
        <servlet-class>com.edu.controller.card.FrameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrameServlet</servlet-name>
        <url-pattern>/frame</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SelectServlet</servlet-name>
        <servlet-class>com.edu.controller.card.SelectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SelectServlet</servlet-name>
        <url-pattern>/selectCard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SelectTrashServlet</servlet-name>
        <servlet-class>com.edu.controller.trash.SelectTrashServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SelectTrashServlet</servlet-name>
        <url-pattern>/selectTrash</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>VerifyServlet</servlet-name>
        <servlet-class>com.edu.utils.VerifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerifyServlet</servlet-name>
        <url-pattern>/verification</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListUserServlet</servlet-name>
        <servlet-class>com.edu.controller.user.ListUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListUserServlet</servlet-name>
        <url-pattern>/listUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>com.edu.controller.user.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ResetUserServlet</servlet-name>
        <servlet-class>com.edu.controller.user.ResetUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResetUserServlet</servlet-name>
        <url-pattern>/resetUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.edu.controller.user.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
   <filter>
       <filter-name>LoginFilter</filter-name>
       <filter-class>com.edu.utils.LoginFilter</filter-class>
   </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/list.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/trash.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/frame.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/frame_admin.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <servlet-name>ListServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <servlet-name>FrameServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <servlet-name>ListTrashServlet</servlet-name>
    </filter-mapping>

</web-app>